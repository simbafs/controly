{
	"compilerOptions": {
		"target": "ES2020",
		"module": "es6",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "es2020"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
